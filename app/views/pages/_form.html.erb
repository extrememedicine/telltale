<%= simple_form_for([@story, @page]) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="form-group">
      <%= f.input :artwork_image, as: :file, label: 'Please select the artwork for this page.' %>
      <br>
      <p class="text-muted">
        Files should be uploaded as .jpg at 2480px x 3507px
      </p>
    </div>

    <div class="form-group">
      <%= f.label :content_raw, 'Enter the content for this page.' %>
      <br>
      <%= f.input :content_raw, as: :text, label: false, input_html: {
        class: 'form-control', style: 'height: 125px;' } %>
    </div>
  </div>
  <div style="max-width: 320px;">
    <div class="form-group">
      <%= f.label :order_number %><br>
      <%= f.input :order_number, as: :integer, label: false, input_html: {
        class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.label :text_colour %><br>
      <%= f.input :text_colour, as: :string, label: false, input_html: {
        class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.label :text_position_top %><br>
      <%= f.input :text_position_top, as: :string, label: false, input_html: {
        class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.label :text_position_left %><br>
      <%= f.input :text_position_left, as: :string, label: false, input_html: {
        class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.label :status %><br>
      <%= f.input :status, as: :text, label: false, input_html: {
        class: 'form-control' } %>
    </div>
  </div>
  <div class="actions">
    <br><br>
    <%= f.hidden_field :story_id, value: @story.id %>
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
