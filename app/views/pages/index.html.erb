<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= @story.title %></h1>
      <h2 class="h3 text-muted" style="line-height: 1.4em;">
        These are all of the pages in your story. When you're happy with what you have, click ‘Publish’ when others will be able to download, distribute and translate to your story.
      </h2>

      <table class="table">
        <thead>
          <tr>
            <th>Artwork</th>
            <th>Order number</th>
            <th>Content raw</th>
            <th>Text colour</th>
            <th>Text position top</th>
            <th>Text position left</th>
            <th>Status</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= image_tag page.artwork_image.url(:thumb) %></td>
              <td><%= page.order_number %></td>
              <td><%= page.content_raw %></td>
              <td><%= page.text_colour %></td>
              <td><%= page.text_position_top %></td>
              <td><%= page.text_position_left %></td>
              <td><%= page.status %></td>
              <td><%= link_to 'Show', story_page_path(@story, page) %></td>
              <td><%= link_to 'Edit', edit_story_page_path(@story, page) %></td>
              <td><%= link_to 'Destroy', story_page_path(@story, page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Add Another Page', new_story_page_path(@story), class: 'btn btn-default' %>
    </div>
  </div>
</div>
<% if @story.status == 'published' %>
  <h1 class="h3 text-center text-success">
    Your story has been published.
  </h1>
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
      <br>
        <br>
        <%= link_to 'Publish Story', publish_story_path(@story), class: 'btn btn-primary btn-lg' %>
        <br>
        <br>
        <p class="text-muted">
          Your story can then be distributed and translated.
        </p>
      </div>
    </div>
  </div>
<% end %>
